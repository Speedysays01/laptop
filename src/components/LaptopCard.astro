---
export interface Props {
	name: string;
	brand: string;
	image: string;
	price: number;
	originalPrice?: number;
	specs: string[];
	badge?: string;
}

const { name, brand, image, price, originalPrice, specs, badge } = Astro.props;
---

<div class="laptop-card">
	{badge && <div class="badge">{badge}</div>}
	<div class="image-container">
		<img src={image} alt={name} loading="lazy" />
	</div>
	<div class="content">
		<div class="brand">{brand}</div>
		<h3 class="name">{name}</h3>
		<ul class="specs">
			{specs.map(spec => <li>{spec}</li>)}
		</ul>
		<div class="pricing">
			<span class="price">₹{price.toLocaleString('en-IN')}</span>
			{originalPrice && (
				<span class="original-price">₹{originalPrice.toLocaleString('en-IN')}</span>
			)}
		</div>
		<div class="actions">
			<button class="btn-primary">Buy Now</button>
			<button class="btn-secondary">View Details</button>
		</div>
	</div>
</div>

<style>
	.laptop-card {
		background: white;
		border-radius: 16px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		border: 1px solid #f3f4f6;
	}

	.laptop-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
	}

	.badge {
		position: absolute;
		top: 16px;
		right: 16px;
		background: linear-gradient(135deg, #f59e0b, #d97706);
		color: white;
		padding: 6px 12px;
		border-radius: 20px;
		font-size: 12px;
		font-weight: 600;
		z-index: 2;
	}

	.image-container {
		padding: 24px;
		background: #f9fafb;
		display: flex;
		align-items: center;
		justify-content: center;
		height: 240px;
	}

	.image-container img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		transition: transform 0.3s ease;
	}

	.laptop-card:hover .image-container img {
		transform: scale(1.05);
	}

	.content {
		padding: 24px;
	}

	.brand {
		font-size: 14px;
		color: #6b7280;
		font-weight: 500;
		margin-bottom: 4px;
	}

	.name {
		font-size: 20px;
		font-weight: 600;
		margin: 0 0 16px 0;
		color: #1f2937;
		line-height: 1.3;
	}

	.specs {
		list-style: none;
		padding: 0;
		margin: 0 0 20px 0;
	}

	.specs li {
		font-size: 14px;
		color: #4b5563;
		margin-bottom: 6px;
		padding-left: 16px;
		position: relative;
	}

	.specs li::before {
		content: '✓';
		position: absolute;
		left: 0;
		color: #10b981;
		font-weight: 600;
	}

	.pricing {
		margin-bottom: 24px;
	}

	.price {
		font-size: 24px;
		font-weight: 700;
		color: #1e3a8a;
	}

	.original-price {
		font-size: 18px;
		color: #9ca3af;
		text-decoration: line-through;
		margin-left: 8px;
	}

	.actions {
		display: flex;
		gap: 12px;
	}

	.btn-primary,
	.btn-secondary {
		flex: 1;
		padding: 12px 16px;
		border-radius: 8px;
		font-weight: 600;
		font-size: 14px;
		cursor: pointer;
		transition: all 0.3s ease;
		border: none;
	}

	.btn-primary {
		background: linear-gradient(135deg, #1e3a8a, #3b82f6);
		color: white;
	}

	.btn-primary:hover {
		background: linear-gradient(135deg, #1e40af, #2563eb);
		transform: translateY(-2px);
	}

	.btn-secondary {
		background: white;
		color: #1e3a8a;
		border: 2px solid #1e3a8a;
	}

	.btn-secondary:hover {
		background: #1e3a8a;
		color: white;
	}

	@media (max-width: 768px) {
		.actions {
			flex-direction: column;
		}
	}
</style>